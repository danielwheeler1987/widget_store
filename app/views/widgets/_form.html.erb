<%= form_with(model: widget, local: true) do |form| %>
  <% if widget.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(widget.errors.count, "error") %> prohibited this widget from being saved:</h4>
      <ul>
      <% widget.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :color_id %>
    <%= form.collection_select :color_id, Color.all, :id, :name,  { include_blank: "Please select" }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :size_id %>
    <%= form.collection_select :size_id, Size.all, :id, :name, { include_blank: "Please select" }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, class: 'form-control' %>
    <small class="form-text text-muted">
      This number represents the current invenotry total
    </small>
  </div>

  <div class="actions">
    <%= form.submit 'Submit', class: 'btn btn-primary', data: { disable_with: 'Processing...'} %>
    <%= link_to 'Go Back', widgets_path, class: 'btn btn-link' %>
  </div>
<% end %>

